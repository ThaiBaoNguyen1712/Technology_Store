<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Kaiadmin - Bootstrap 5 Admin Dashboard</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
          name="viewport" />
    <link rel="icon"
          href="~/Admin/assets/img/kai~/Admin/favicon.ico"
          type="image/x-icon"  asp-append-version="true"/>

    <!-- Fonts and icons -->
    <script src="~/Admin/assets/js/plugin/webfont/webfont.min.js"></script>

    <script>
        var fontsUrl = '@Url.Content("~/Admin/assets/css/fonts.min.css")'; // Tạo đường dẫn chính xác cho CSS

        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: [
                    "Font Awesome 5 Solid",
                    "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands",
                    "simple-line-icons",
                ],
                urls: [fontsUrl], // Sử dụng biến fontsUrl
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

    <!-- CSS Files -->
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/Admin/assets/css/bootstrap.min.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/Admin/assets/css/plugins.min.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/Admin/assets/css/kaiadmin.min.css")" asp-append-version="true" />
    <link href="@Url.Content("~/Admin/assets/css/site.css")" rel="stylesheet" asp-append-version="true" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link rel="stylesheet" href="@Url.Content("~/Admin/assets/css/demo.css")" asp-append-version="true" />
    @* Toast JS *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/Admin/assets/js/core/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap-select CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/css/bootstrap-select.min.css">

</head>
<body>
    @* Lib support *@
    @using Tech_Store.Helpers


    <div class="wrapper">
        <!-- Sidebar -->
    <style>
           
    </style>
        <div class="sidebar" data-background-color="dark">
            <div class="sidebar-logo">
                <div class="logo-header" data-background-color="dark">
                    <a href="/admin" class="logo">
                        <img src="@ViewBag.LogoUrl" alt="navbar brand" class="navbar-brand" height="50" />
                    </a>
                    <div class="nav-toggle">
       
                        <button class="btn btn-toggle sidenav-toggler">
                            <i class="gg-menu-left"></i>
                        </button>
                        <button class="btn btn-toggle toggle-sidebar">
                            <i class="gg-menu-right"></i>
                        </button>
                    </div>
                    <button class="topbar-toggler more">
                        <i class="gg-more-vertical-alt"></i>
                    </button>
                </div>
            </div>

            <div class="sidebar-wrapper scrollbar scrollbar-inner">
                <div class="sidebar-content">
                    <ul class="nav nav-secondary">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a href="/admin/index" class="nav-link">
                                <i class="fas fa-home"></i>
                                <p>Bảng điều khiển</p>
                            </a>
                        </li>

                        <!-- POS -->
                        <li class="nav-item">
                            <a href="/Admin/Pos" class="nav-link">
                                <i class="fas fa-store"></i>
                                <p>POS - Bán hàng</p>
                            </a>
                        </li>

                        <!-- SECTION: Quản lý sản phẩm -->
                        <li class="nav-section">
                            <span class="sidebar-mini-icon">
                                <i class="fa fa-ellipsis-h"></i>
                            </span>
                            <h4 class="text-section">Quản lý sản phẩm</h4>
                        </li>

                        <!-- Categories -->
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#categories" class="nav-link">
                                <i class="fas fa-th-list me-2"></i>
                                <p>Danh mục sản phẩm</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="categories">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/Admin/Categories" class="nav-link">
                                            <span class="sub-item">Quản lý danh mục</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Brands -->
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#brands" class="nav-link">
                                <i class="fas fa-tags me-2"></i>
                                <p>Thương hiệu</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="brands">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/Admin/Brands" class="nav-link">
                                            <span class="sub-item">Quản lý thương hiệu</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Products -->
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#products" class="nav-link">
                                <i class="fas fa-pen-square me-2"></i>
                                <p>Sản phẩm</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="products">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/Admin/StockManager" class="nav-link">
                                            <span class="sub-item">Nhập/Xuất hàng</span>
                                        </a>
                                        <a href="/Admin/Products/all" class="nav-link">
                                            <span class="sub-item">Tổng sản phẩm <span class="badge badge-dark">@ViewBag.Product_all</span></span>
                                        </a>
                                        <a href="/Admin/Products/available" class="nav-link">
                                            <span class="sub-item">Sản phẩm sẵn hàng <span class="badge badge-success">@ViewBag.Product_available</span></span>
                                        </a>
                                        <a href="/Admin/Products/outstock" class="nav-link">
                                            <span class="sub-item">Sản phẩm hết hàng <span class="badge badge-danger">@ViewBag.Product_outstock</span></span>
                                        </a>
                                        <a href="/Admin/Products/preorder" class="nav-link">
                                            <span class="sub-item">Sản phẩm đặt trước <span class="badge badge-warning">@ViewBag.Product_preorder</span></span>
                                        </a>
                                        <a href="/Admin/Products/discontinued" class="nav-link">
                                            <span class="sub-item">Sản phẩm ngừng bán <span class="badge badge-secondary">@ViewBag.Product_discontinued</span></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- SECTION: Quản lý đơn hàng -->
                        <li class="nav-section">
                            <span class="sidebar-mini-icon">
                                <i class="fa fa-ellipsis-h"></i>
                            </span>
                            <h4 class="text-section">Quản lý đơn hàng</h4>
                        </li>

                        <!-- Orders -->
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#orders" class="nav-link">
                                <i class="fa fa-shopping-cart me-2"></i>
                                <p>Đơn hàng</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="orders">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/Admin/Orders/all" class="nav-link">
                                            <span class="sub-item">Tất cả đơn hàng <span class="badge badge-dark">@ViewBag.Order_all</span></span>
                                        </a>
                                        <a href="/Admin/Orders/pending" class="nav-link">
                                            <span class="sub-item">Đang xử lý <span class="badge badge-primary">@ViewBag.Order_pending</span></span>
                                        </a>
                                        <a href="/Admin/Orders/confirmed" class="nav-link">
                                            <span class="sub-item">Đã xác nhận <span class="badge badge-info">@ViewBag.Order_confirmed</span></span>
                                        </a>
                                        <a href="/Admin/Orders/shipping" class="nav-link">
                                            <span class="sub-item">Đang giao hàng <span class="badge badge-warning">@ViewBag.Order_shipping</span></span>
                                        </a>
                                        <a href="/Admin/Orders/delivered" class="nav-link">
                                            <span class="sub-item">Đã giao hàng <span class="badge badge-light">@ViewBag.Order_delivered</span></span>
                                        </a>
                                        <a href="/Admin/Orders/completed" class="nav-link">
                                            <span class="sub-item">Hoàn tất <span class="badge badge-success">@ViewBag.Order_completed</span></span>
                                        </a>
                                        <a href="/Admin/Orders/cancelled" class="nav-link">
                                            <span class="sub-item">Đã hủy <span class="badge badge-danger">@ViewBag.Order_cancelled</span></span>
                                        </a>
                                        <a href="/Admin/Orders/refunded" class="nav-link">
                                            <span class="sub-item">Hoàn tiền <span class="badge badge-secondary">@ViewBag.Order_refunded</span></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Customers -->
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#customers" class="nav-link">
                                <i class="fa fa-user me-2"></i>
                                <p>Khách hàng</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="customers">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/Admin/Users" class="nav-link">
                                            <span class="sub-item">Danh sách khách hàng</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Transactions & Vouchers -->
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#transactions" class="nav-link">
                                <i class="fa fa-exchange-alt me-2"></i>
                                <p>Giao dịch & Voucher</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="transactions">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/Admin/Transactions" class="nav-link">
                                            <span class="sub-item">Xem giao dịch</span>
                                        </a>
                                        <a href="/Admin/Vouchers" class="nav-link">
                                            <span class="sub-item">Quản lý voucher</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- SECTION: Cài đặt hệ thống -->
                        <li class="nav-section">
                            <span class="sidebar-mini-icon">
                                <i class="fa fa-ellipsis-h"></i>
                            </span>
                            <h4 class="text-section">Cài đặt hệ thống</h4>
                        </li>

                        <!-- Settings -->
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#settings" class="nav-link">
                                <i class="fas fa-cog me-2"></i>
                                <p>Cài đặt</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="settings">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/Admin/Settings/Index" class="nav-link">
                                            <span class="sub-item">Cài đặt chung</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- End Sidebar -->

        <div class="main-panel">
            <div class="main-header">
                <div class="main-header-logo">
                    <!-- Logo Header -->
                    <div class="logo-header" data-background-color="dark">
                        <a href="index.html" class="logo">
                            <img src="assets/img/kai~/Admin/logo_light.svg"
                                 alt="navbar brand"
                                 class="navbar-brand"
                                 height="20" />
                        </a>
                        <div class="nav-toggle">
                            <button class="btn btn-toggle toggle-sidebar">
                                <i class="gg-menu-right"></i>
                            </button>
                            <button class="btn btn-toggle sidenav-toggler">
                                <i class="gg-menu-left"></i>
                            </button>
                        </div>
                        <button class="topbar-toggler more">
                            <i class="gg-more-vertical-alt"></i>
                        </button>
                    </div>
                    <!-- End Logo Header -->
                </div>
                <!-- Navbar Header -->
                <nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
                    <div class="container-fluid">
                        <nav class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <button type="submit" class="btn btn-search pe-1">
                                        <i class="fa fa-search search-icon"></i>
                                    </button>
                                </div>
                                <input type="text"
                                       placeholder="Tìm kiếm sản phẩm nhanh..."
                                       class="form-control" />
                            </div>
                        </nav>

                        <ul class="navbar-nav topbar-nav ms-md-auto align-items-center">
                            <li class="nav-item topbar-icon dropdown hidden-caret d-flex d-lg-none">
                                <a class="nav-link dropdown-toggle"
                                   data-bs-toggle="dropdown"
                                   href="#"
                                   role="button"
                                   aria-expanded="false"
                                   aria-haspopup="true">
                                    <i class="fa fa-search"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-search animated fadeIn">
                                    <form class="navbar-left navbar-form nav-search">
                                        <div class="input-group">
                                            <input type="text"
                                                   placeholder="Search ..."
                                                   class="form-control" />
                                        </div>
                                    </form>
                                </ul>
                            </li>
                            <li class="nav-item topbar-icon dropdown hidden-caret">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="messageDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-haspopup="true"
                                   aria-expanded="false">
                                    <i class="fa fa-envelope"></i>
                                </a>
                                <ul class="dropdown-menu messages-notif-box animated fadeIn"
                                    aria-labelledby="messageDropdown">
                                    <li>
                                        <div class="dropdown-title d-flex justify-content-between align-items-center">
                                            Messages
                                            <a href="#" class="small">Mark all as read</a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="message-notif-scroll scrollbar-outer">
                                            <div class="notif-center">
                                                <a href="#">
                                                    <div class="notif-img">
                                                        <img src="assets/img/jm_denis.jpg"
                                                             alt="Img Profile" />
                                                    </div>
                                                    <div class="notif-content">
                                                        <span class="subject">Jimmy Denis</span>
                                                        <span class="block"> How are you ? </span>
                                                        <span class="time">5 minutes ago</span>
                                                    </div>
                                                </a>
                                                <a href="#">
                                                    <div class="notif-img">
                                                        <img src="assets/img/chadengle.jpg"
                                                             alt="Img Profile" />
                                                    </div>
                                                    <div class="notif-content">
                                                        <span class="subject">Chad</span>
                                                        <span class="block"> Ok, Thanks ! </span>
                                                        <span class="time">12 minutes ago</span>
                                                    </div>
                                                </a>
                                                <a href="#">
                                                    <div class="notif-img">
                                                        <img src="assets/img/mlane.jpg"
                                                             alt="Img Profile" />
                                                    </div>
                                                    <div class="notif-content">
                                                        <span class="subject">Jhon Doe</span>
                                                        <span class="block">
                                                            Ready for the meeting today...
                                                        </span>
                                                        <span class="time">12 minutes ago</span>
                                                    </div>
                                                </a>
                                                <a href="#">
                                                    <div class="notif-img">
                                                        <img src="assets/img/talha.jpg"
                                                             alt="Img Profile" />
                                                    </div>
                                                    <div class="notif-content">
                                                        <span class="subject">Talha</span>
                                                        <span class="block"> Hi, Apa Kabar ? </span>
                                                        <span class="time">17 minutes ago</span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <a class="see-all" href="javascript:void(0);">
                                            See all messages<i class="fa fa-angle-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item topbar-icon dropdown hidden-caret">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="notifDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-haspopup="true"
                                   aria-expanded="false">
                                    <i class="fa fa-bell"></i>
                                    <span class="notification">@ViewBag.Notification_count</span>
                                </a>
                                <ul class="dropdown-menu notif-box animated fadeIn"
                                    aria-labelledby="notifDropdown">
                                    <li>
                                        <div class="dropdown-title">
                                            Thông báo
                                        </div>
                                        @if (ViewBag.Notifications.Count > 0)
                                        {
                                            <button class="d-flex text-end btn btn-sm" id="markAllAsRead">Đánh dấu tất cả là đã đọc</button>

                                        }
                                    </li>
                                    <li>
                                        <div class="notif-scroll scrollbar-outer">
                                            <div class="notif-center">
                                                @if(ViewBag.Notifications.Count >0 )
                                                {
                                                    foreach(var noti in ViewBag.Notifications)
                                                    {
                                                        <a href="@noti.RedirectUrl">
                                                            @if (noti.Type == "new register")
                                                            {
                                                                <div class="notif-icon notif-primary">
                                                                    <i class="fa fa-user-plus"></i>
                                                                </div>
                                                            }
                                                            else if (noti.Type == "order completed")
                                                            {
                                                                <div class="notif-icon notif-success">
                                                                    <i class="fa fa-check-circle"></i>
                                                                  
                                                                </div>
                                                            }
                                                            else if (noti.Type == "low stock")
                                                            {
                                                                <div class="notif-icon notif-warning">
                                                                    <i class="fa fa-exclamation-triangle"></i>
                                                                   
                                                                </div>
                                                            }
                                                            else if (noti.Type == "error")
                                                            {
                                                                <div class="notif-icon notif-danger">
                                                                    <i class="fa fa-times-circle"></i>
                                                                   
                                                                </div>
                                                            }
                                                            else if (noti.Type == "new comment")
                                                            {
                                                                <div class="notif-icon notif-success">
                                                                    <i class="fa fa-comment"></i>
                                                                   
                                                                </div>
                                                            }
                                                            else if (noti.Type == "new order")
                                                            {
                                                                <div class="notif-icon notif-primary">
                                                                    <i class="fa fa-shopping-cart"></i>
                                                                    
                                                                </div>
                                                            }
                                                            else if (noti.Type == "payment received")
                                                            {
                                                                <div class="notif-icon notif-success">
                                                                    <i class="fa fa-credit-card"></i>
                                                                   
                                                                </div>
                                                            }
                                                            else if (noti.Type == "product added")
                                                            {
                                                                <div class="notif-icon notif-info">
                                                                    <i class="fa fa-plus"></i>
                                                                   
                                                                </div>
                                                            }
                                                            else if (noti.Type == "shipment sent")
                                                            {
                                                                <div class="notif-icon notif-warning">
                                                                    <i class="fa fa-truck"></i>
                                                                    <span>Đã gửi lô hàng!</span>
                                                                </div>
                                                            }
                                                            else if (noti.Type == "account updated")
                                                            {
                                                                <div class="notif-icon notif-secondary">
                                                                    <i class="fa fa-user-edit"></i>
                                                                    <span>Tài khoản được cập nhật!</span>
                                                                </div>
                                                            }
                                                            else if (noti.Type == "system update")
                                                            {
                                                                <div class="notif-icon notif-secondary">
                                                                    <i class="fa fa-wrench"></i>
                                                                    <span>Hệ thống đã được cập nhật!</span>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="notif-icon notif-secondary">
                                                                    <i class="fa fa-info-circle"></i>
                                                                    <span>Thông báo khác.</span>
                                                                </div>
                                                            }
                                                            <div class="notif-content">
                                                                 <span class="block">
                                                                    <small class="text-truncated" style="max-width:200px" title="@noti.Message">
                                                                        @(noti.Message.Length > 30 ? noti.Message.Substring(0, 30) + "..." : noti.Message)
                                                                    </small>

                                                                </span>
                                                                <span class="time">@((noti.CreatedAt as DateTime?)?.TimeAgo() ?? "Không xác định")</span>
                                                            </div>
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    <div class="notif-content" style="min-height:40px">
                                                        <span class="block d-flex text-center justify-content-center align-items-center">Không có thông báo</span>
                                                    </div>
                                                }
                                             
                                            </div>
                                        </div>
                                    </li>
                                    @if (ViewBag.Notifications.Count > 0)
                                        {
                                            <li>
                                                <a class="see-all" href="javascript:void(0);">
                                                    Xem thêm<i class="fa fa-angle-right"></i>
                                                </a>
                                            </li>
                                        }
                                </ul>
                            </li>
                            <li class="nav-item topbar-icon dropdown hidden-caret">
                                <a class="nav-link"
                                   data-bs-toggle="dropdown"
                                   href="#"
                                   aria-expanded="false">
                                    <i class="fas fa-layer-group"></i>
                                </a>
                                <div class="dropdown-menu quick-actions animated fadeIn">
                                    <div class="quick-actions-header">
                                        <span class="title mb-1">Quick Actions</span>
                                        <span class="subtitle op-7">Shortcuts</span>
                                    </div>
                                    <div class="quick-actions-scroll scrollbar-outer">
                                        <div class="quick-actions-items">
                                            <div class="row m-0">
                                                <a class="col-6 col-md-4 p-0" href="#">
                                                    <div class="quick-actions-item">
                                                        <div class="avatar-item bg-danger rounded-circle">
                                                            <i class="far fa-calendar-alt"></i>
                                                        </div>
                                                        <span class="text">Calendar</span>
                                                    </div>
                                                </a>
                                                <a class="col-6 col-md-4 p-0" href="#">
                                                    <div class="quick-actions-item">
                                                        <div class="avatar-item bg-warning rounded-circle">
                                                            <i class="fas fa-map"></i>
                                                        </div>
                                                        <span class="text">Maps</span>
                                                    </div>
                                                </a>
                                                <a class="col-6 col-md-4 p-0" href="#">
                                                    <div class="quick-actions-item">
                                                        <div class="avatar-item bg-info rounded-circle">
                                                            <i class="fas fa-file-excel"></i>
                                                        </div>
                                                        <span class="text">Reports</span>
                                                    </div>
                                                </a>
                                                <a class="col-6 col-md-4 p-0" href="#">
