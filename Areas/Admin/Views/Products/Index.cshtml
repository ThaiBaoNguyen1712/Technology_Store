@model IEnumerable<Tech_Store.Models.Product>
@{
    ViewData["Title"] = "Products";
    Layout = "/Areas/Admin/Views/Shared/Layout.cshtml";
}
@using System.Globalization;

<style>
    .cke_contents {
        border: 2px solid #FF5733; /* Màu viền tùy chỉnh */
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Danh sách sản phẩm</h4>
                        <a href="~/Admin/Products/Create" class="btn btn-primary btn-round ms-auto">
                            <i class="fa fa-plus"></i>
                            Thêm
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Modal -->
                    <div class="table-responsive">
                        <table id="add-row" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Ảnh</th>
                                    <th>Tên</th>
                                    <th>Thương Hiệu</th>
                                    <th>Danh Mục</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tình trạng</th>
                                    <th style="width:10%">Action</th>
                                </tr>
                            </thead>

                            <tfoot>
                                <tr>
                                    <th>Ảnh</th>
                                    <th>Tên</th>
                                    <th>Thương Hiệu</th>
                                    <th>Danh Mục</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tình trạng</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td><img src="~/Upload/Products/@product.Image" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;"></td>
                                            <td>@product.Name</td>
                                            <td>@product.Brand?.Name</td>
                                            <td>@product.Category?.Name</td>
                                            <td>@product.DiscountPrice.ToString("C0", new CultureInfo("vi-VN"))</td>
                                            <td>@product.Stock</td>
                                            <td>
                                                <span class="badge @(product.Status == "Active" ? "bg-success" : "bg-danger")">
                                                    @product.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="form-button-action">
                                                    <button class="btn btn-link btn-primary" onclick="editProduct(@product.ProductId)">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-link btn-danger" onclick="deleteProduct(@product.ProductId)">
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>