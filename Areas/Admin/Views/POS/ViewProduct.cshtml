                <div class="row d-flex">
                    <!-- Hình ảnh sản phẩm -->
                    <div class="col-md-4 text-center">
                        <img class="img-fluid rounded shadow" id="imgProduct" src="https://126.cdn.vccloud.vn/uploads/2024/02/ip16promaxx.webp" style="height:250px;width:auto%;object-fit:cover;" alt="iPhone 16 Pro Max" />
                    </div>
                    <!-- Thông tin sản phẩm -->
                    <div class="col-md-8">
                        <div class="product-name mb-2">
                            <div>
                                <span class="badge badge-success stockValue" style="font-size: 1.05em; padding: 0.4em 1.2em;">Còn hàng</span>


                            </div>
                            <input type="hidden" id="IdProduct"/>
                            <h3 id="nameProduct" class="fw-bold">iPhone 16 Pro Max</h3>
                        </div>
                        <div class="mb-3">
                            <span id="priceProduct" class="fs-4 text-danger fw-semibold">Giá: 16.000.000đ</span>
