@{
    ViewData["Title"] = "Thiết lập tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<div class="container-fluid">
    <div class="row d-flex">
        <div class="col-6">
            <h5 class="mt-4">Thiết lập tài khoản</h5>
        </div>
        <div class="col-6 text-end">
            <h5 class="mt-4">
                <button class="btn btn-outline-primary">Về Trang Chủ</button>
            </h5>
        </div>
    </div>

    <!-- Thông tin cơ bản -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h6>Thông tin cơ bản</h6>
        </div>
        <div class="card-body">
            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tên :</label>
                <input type="text" class="fw-bold form-control" value="Nguyen Thai Bao" />
            </div>
            <div class="form-group mb-3">
                <label class="form-label fw-bold">Email :</label>
                <input type="email" class="fw-bold form-control" value="nthaibao1712@gmail.com" />
            </div>
            <div class="form-group mb-3">
                <label class="form-label fw-bold">Số điện thoại :</label>
                <input type="text" class="fw-bold form-control" value="0384064947" />
            </div>
            <div class="form-group">
                <label class="form-label fw-bold">Chức vụ :</label>
                <input type="text" class="fw-bold form-control" value="Chủ cửa hàng" disabled />
            </div>
        </div>
    </div>

    <!-- Thay đổi mật khẩu -->
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h6>Thay đổi mật khẩu</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Mật khẩu cũ :</label>
                    <input type="password" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Mật khẩu mới :</label>
                    <input type="password" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Nhập lại mật khẩu mới (*) :</label>
                    <input type="password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
        </div>
    </div>
</div>
