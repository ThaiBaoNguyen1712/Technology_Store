@{
    ViewData["Title"] = "Home Page";
}
@using System.Globalization;
<!-- carousel -->
<div class="container pt-2">
    <div class="row">
        <div class="col-md-3">
            <div class="card categories-menu">
                <ul class="list-group list-group-flush">
                    @foreach (var item in ViewBag.list_cate)
                    {
                        <li class="list-group-item category-item">
                            <div class="dropdown dropend w-100">
                                <a href="~/Category/@item.EngTitle" class="category-link text-decoration-none text-dark w-100 d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="category-icon">
                                            <img  src="~/Upload/Logo/@item.Image" width="30px" height="30px"/>
                                        </div>
                                        <span class="category-text">@item.Name</span>
                                      @*   <span class="badge bg-primary rounded-pill ms-2">156</span> *@
                                    </div>
                                    <i class="fa fa-angle-right transition-icon"></i>
                                </a>
                            </div>
                        </li>
                    }
                   
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://www.mymobileindia.com/wp-content/uploads/2023/12/maxresdefault.jpg" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="https://i.ytimg.com/vi/W1BB8QBQ-Xc/maxresdefault.jpg" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/34b5bf180145769.6505ae7623131.jpg" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
        <!-- navbar right -->
        <div class="col-md-3 d-flex flex-column align-items-center">
            <div class="card mb-3" style="width: 100%; border: none; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <img src="~/Client/asset/img/R.png" class="card-img-top" style="height: 120px; width: auto; object-fit: cover;" alt="">
            </div>
            <div class="card" style="width: 100%; border: none; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <img src="~/Client/asset/img/right-banner-14-10.webp" class="card-img-top" style="height: 120px; width: auto; object-fit: cover;" alt="">
            </div>
        </div>
        <!-- end navbar right -->
    </div>
</div>
<!-- end carousel -->
<section class="container pt-2">
    <img src="~/client/asset/img/b2s-update-19-06 (1).gif" class="w-100" />
</section>
<section class="container pt-2" data-section="hot-sale">
    <div class="card" style="background: linear-gradient(145deg, #e69a8d, #e96583); border: none;">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <h3 class="m-0" style="font-weight: bold;">
                    <img src="~/Client/asset/img/fire-5281_256.gif" style="max-width: 25px;" class="mb-3"> <span class="hot-sale-txt">HOT SALE THÁNG NÀY</span>
                </h3>
                <img src="~/Client/asset/img/red-8562_256.gif" alt="SALE" class="img-fluid" style="max-width: 100px;">
            </div>
            <!-- Nút điều hướng -->
            <button class="btn-scroll btn-prev" data-target="hot-sale" data-section="hot-sale">
                <i class="fa fa-chevron-left"></i>
            </button>
            <button class="btn-scroll btn-next" data-target="hot-sale" data-section="hot-sale">
                <i class="fa fa-chevron-right"></i>
            </button>

            <div class="scrolling-wrapper" data-wrapper="hot-sale">
                <div class="row pt-2 mx-auto">
                    <!-- Nội dung sản phẩm -->
                    @foreach (var hot in ViewBag.productsHotSale)
                    {
                        <div class="card product-card" style="max-width: 250px;" data-id="@hot.ProductId">
                            <!-- Sale Badge -->
                            <div class="position-absolute d-flex gap-2" style="top: 10px; left: 10px; z-index: 2;">
                                @if (hot.SellPrice != hot.OriginalPrice)
                                {
                                    @if (hot.DiscountPercentage != null)
                                    {
                                        <span class="badge bg-danger p-2">Giảm @hot.DiscountPercentage%</span>
                                    }
                                    @if (hot.DiscountAmount != null)
                                    {

                                        <span class="badge bg-danger p-2">Giảm @((hot.OriginalPrice - hot.SellPrice).ToString("C0", new CultureInfo("vi-VN")))</span>
                                    }

                                }
                            </div>
                            <!-- Installment Badge -->
                            <div class="position-absolute" style="top: 10px; right: 10px; z-index: 2;">
                                <span class="badge bg-white text-primary border border-primary p-2">Trả góp 0%</span>
                            </div>
                            <div class="product-link" data-slug="@hot.Slug">
                                <div class="image-container">
                                    <img src="/Upload/Products/@hot.Image" class="product-image" alt="@hot.Name">
                                </div>

                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2 product-title">@hot.Name</h6>
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <span class="text-danger fw-bold" style="">@hot.SellPrice?.ToString("C0", new CultureInfo("vi-VN"))</span>
                                        @if (hot.SellPrice != hot.OriginalPrice)
                                        {
                                            <span class="text-decoration-line-through text-muted" style="font-size:0.8rem">@hot.OriginalPrice?.ToString("C0", new CultureInfo("vi-VN"))</span>
                                        }
                                    </div>
                                    <button class="btn btn-outline-danger btn-sm w-100 addToWishList" data-id="@hot.ProductId">
                                        <i class="far fa-heart"></i> Yêu thích
                                    </button>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Lặp lại sản phẩm khác ở đây -->

                </div>
            </div>
        </div>
    </div>
</section>


@foreach (var item in ViewBag.ProductsByCategory)
{
    <section class="products">
        <div class="container">
            <div class="product-section" data-section="@item.Category.Name">
                <div style="max-width: 85vw; padding: 10px; display: flex; justify-content: space-between; align-items: center;">
                    <h3 class="text-dark mb-0">@item.Category.Name</h3>
                    <a href="~/Category/@item.Category.EngTitle" class="text-decoration-none text-primary position-absolute end-0 me-3 d-flex align-items-center">
                        <span class="me-1">Xem tất cả</span>
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                    </a>
                </div>

                <!-- Nút điều hướng cho phần sản phẩm mới -->
                <button class="btn-scroll btn-prev" data-target="@item.Category.Name">
                    <i class="fa fa-chevron-left"></i>
                </button>
                <button class="btn-scroll btn-next" data-target="@item.Category.Name">
                    <i class="fa fa-chevron-right"></i>
                </button>
                <div class="scrolling-wrapper" data-wrapper="@item.Category.Name">
                    <div class="row pt-2 mx-auto">
                        @foreach (var product in item.Products)
                        {
                            <div class="card product-card" style="max-width: 250px;" data-id="@product.ProductId">
                                <!-- Sale Badge -->
                                <div class="position-absolute d-flex gap-2" style="top: 10px; left: 10px; z-index: 2;">
                                    @if (product.SellPrice != product.OriginalPrice)
                                    {
                                        @if(product.DiscountPercentage !=null)
                                        {
                                            <span class="badge bg-danger p-2">Giảm @product.DiscountPercentage%</span>
                                        }
                                        @if (product.DiscountAmount !=null)
                                        {
                                     
                                            <span class="badge bg-danger p-2">Giảm @((product.OriginalPrice - product.SellPrice).ToString("C0", new CultureInfo("vi-VN")))</span>
                                        }

                                    }
                                </div>
                                <!-- Installment Badge -->
                                <div class="position-absolute" style="top: 10px; right: 10px; z-index: 2;">
                                    <span class="badge bg-white text-primary border border-primary p-2">Trả góp 0%</span>
                                </div>
                                <div class="product-link" data-slug="@product.Slug">
                                    <div class="image-container">
                                        <img src="/Upload/Products/@product.Image" class="product-image" alt="@product.Name">
                                    </div>

                                    <div class="card-body p-3">
                                        <h6 class="card-title mb-2 product-title">@product.Name</h6>
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <span class="text-danger fw-bold" style="">@product.SellPrice?.ToString("C0",new CultureInfo("vi-VN"))</span>
                                            @if (product.SellPrice != product.OriginalPrice)
                                            {
                                                <span class="text-decoration-line-through text-muted" style="font-size:0.8rem">@product.OriginalPrice?.ToString("C0",new CultureInfo("vi-VN"))</span>
                                            }
                                        </div>
                                        <button class="btn btn-outline-danger btn-sm w-100 addToWishList" data-id="@product.ProductId">
                                            <i class="far fa-heart"></i> Yêu thích
                                        </button>
                                    </div>
                                </div>
                            </div>
                           
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
