                                <!-- Price -->
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <span class="text-danger fw-bold" style="font-size: 1.2rem;">11.990.000đ</span>
                                    <span class="text-decoration-line-through text-muted">13.990.000đ</span>
                                </div>
                                <!-- Wishlist Button -->
                                <button class="btn btn-outline-danger btn-sm w-100">
                                    <i class="far fa-heart"></i> Yêu thích
