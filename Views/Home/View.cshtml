@model Tech_Store.Models.Product
@{
    ViewData["Title"] = "Thông tin sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Globalization;
<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <div class="gallery-wrapper">
                <!-- Thumbnails Section -->
                <div class="thumbnail-container-wrapper">
                    <button class="thumbnail-control prev">
                        <i class="fas fa-chevron-up"></i>
                    </button>
                    <div class="thumbnail-container">
                        <div class="thumbnail active" data-src="/Upload/Products/@Model.Image" style="background-image: url('/Upload/Products/@Model.Image')"></div>

                        @foreach (var img in Model.Galleries)
                        {
                            <div class="thumbnail" data-src="/Upload/Products/@img.Path" style="background-image: url('/Upload/Products/@img.Path')"></div>
                        }

                    </div>
                    <button class="thumbnail-control next">
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>

                <!-- Main Image Gallery -->
                <div class="product-gallery">
                    <img id="mainImage" src="/Upload/Products/@Model.Image" alt="Product Image">

                </div>
            </div>
        </div>

        <div class="col-md-5 product-info">
            <h3>@Model.Name</h3>
            <div class="rating">
                <span class="text-muted">(0 Đánh giá)</span>
            </div>
            <div class="d-flex flex-wrap gap-3">
                @foreach (var varient in Model.VarientProducts)
                {
                    <div class="card varient-card @(varient.Stock <= 0 ? "disabled" : "")" data-id="@varient.VarientId" @(varient.Stock <= 0 ? "style='pointer-events: none; opacity: 0.5;'" : "")>
                        <div class="varient-attributes">
                            <span>@varient.Attributes</span>
                        </div>
                        <div class="varient-price">
                            <span>@varient.Price?.ToString("C0", new CultureInfo("vi-VN"))</span>
                        </div>
                    </div>
                }

            </div>

            <style>
              
            </style>
            <div class="price">
                @Model.SellPrice?.ToString("C0",new CultureInfo("vi-VN"))
            </div>
            <div class="row g-3 p-3 bg-white rounded-3 shadow-sm">
                <!-- Nút Mua ngay -->
                <div class="col-md-8">
                    <button type="button" class="btn btn-buy-now text-white w-100 py-3 fw-semibold text-uppercase shadow">
                        <i class="fas fa-bolt me-2"></i>
                        Mua ngay
                    </button>
                </div>
                <!-- Nút Thêm vào giỏ -->
                <div class="col-md-4 ">
                    <button type="button" id="AddToCart" class="btn btn-cart btn-outline-danger w-100 py-3">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-12">
          
                <div class="product-detail">
                <div class="title-container">
                    <h4 class="product-title">Thông tin sản phẩm</h4>
                </div>


                    <div class="description-content">
                        <p class="product-description">@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="fade-bottom"></div>
                    <button class="btn btn-outline-danger btn-see-more">Xem thêm</button>
                </div>
         
        </div>
    </div>
    <section class="products">
        <div class="container">
            <div class="product-section" data-section="new-products">
                <div class="card mx-auto title-product-card py-2 position-relative" style="max-width: 85vw; background: linear-gradient(145deg, #707070, #b98888); border: none; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 8px;">
                    <h4 class="text-start ms-5 title-section text-light mb-0">Có thể bạn sẽ quan tâm</h4>
                    <a href="#" class="text-decoration-none text-light position-absolute end-0 me-5 d-flex align-items-center">
                        <span>Xem tất cả</span>
                        <i class="fa fa-angle-right ms-2" aria-hidden="true"></i>
                    </a>
                </div>

                <!-- Nút điều hướng cho phần sản phẩm mới -->
                <div class="d-flex justify-content-between">
                    <button class="btn-scroll btn-prev" data-target="new-products">
                        <i class="fa fa-chevron-left"></i>
                    </button>
                    <button class="btn-scroll btn-next" data-target="new-products">
                        <i class="fa fa-chevron-right"></i>
                    </button>
                </div>

                <div class="scrolling-wrapper" data-wrapper="new-products">
                    <div class="row pt-2 mx-auto">
                        <div class="card product-card" style="max-width: 280px;">
                            <!-- Sale Badge -->
                            <div class="position-absolute d-flex gap-2" style="top: 10px; left: 10px; z-index: 2;">
                                <span class="badge bg-danger p-2">Giảm 14%</span>
                            </div>

                            <!-- Installment Badge -->
                            <div class="position-absolute" style="top: 10px; right: 10px; z-index: 2;">
                                <span class="badge bg-white text-primary border border-primary p-2">Trả góp 0%</span>
                            </div>

                            <!-- Product Image -->
                            <div class="position-relative">
                                <img src="https://th.bing.com/th/id/R.e6c9f8c0f4285c2ea3b73d6046efc0ec?rik=R2HWLjXDEtFp0A&pid=ImgRaw&r=0" class="card-img-top p-3" alt="Laptop Acer">
                            </div>

                            <!-- Product Info -->
                            <div class="card-body p-3">
                                <!-- Specs Pills -->
                                <div class="d-flex gap-2 mb-2">
                                    <span class="badge bg-light text-dark border">R7-5700U</span>
                                    <span class="badge bg-light text-dark border">AMD Radeon</span>
                                </div>
                                <div class="d-flex gap-2 mb-2">
                                    <span class="badge bg-light text-dark border">16GB</span>
                                    <span class="badge bg-light text-dark border">512GB</span>
