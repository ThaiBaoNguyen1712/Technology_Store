@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="Client/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tech_Store.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .vh-100 {
            min-height: 100vh;
        }

        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .h-custom {
            height: calc(100% - 73px);
        }

        media (max-width: 450px) {
            .h-custom

        {
            height: 100%;
        }

        }

        .btn-dark {
            background-color: #ff6219;
            border-color: #ff6219;
        }

            .btn-dark:hover {
                background-color: #ff5714;
                border-color: #ff5714;
            }
        /* Custom buttons */
        .btn-custom {
            background-color: #ff6219;
            color: white;
        }

            .btn-custom:hover {
                background-color: #ff8c4f;
                color: white;
            }

        .btn-social {
            color: #393f81;
            border: none;
        }

            .btn-social i {
                font-size: 1.5rem;
            }

            .btn-social:hover {
                color: #ff6219;
            }
    </style>
</head>
<body>
    <section class="vh-100" style="background-color: #f8f9fa;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block my-auto">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Tech Store</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đặt lại mật khẩu</h5>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="form2Example17" class="form-control form-control" />
                                            <label class="form-label" for="form2Example17">Email</label>
                                        </div>
                                        <p class="text-danger text-sm">
                                            (!) Chúng tôi sẽ gửi mã xác nhận vào Email của bạn để chắc chắn rằng bạn muốn đặt lại mật khẩu.
                                        </p>
                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="button">Gửi mã</button>
                                        </div>

                                        <div class="divider d-flex align-items-center my-4">
                                            <p class="text-center fw-bold mx-3 mb-0">Or</p>
                                        </div>

                                        <!-- Social Media Buttons -->
                                        <div class="justify-content-center d-flex mb-4">
                                            <button type="button" class="btn btn-social btn-lg mx-1">
                                                <i class="bi bi-facebook"></i>
                                            </button>

                                            <button type="button" class="btn btn-social btn-lg mx-1">
                                                <i class="bi bi-twitter"></i>
                                            </button>

                                            <button type="button" class="btn btn-social btn-lg mx-1">
                                                <i class="bi bi-linkedin"></i>
                                            </button>
                                        </div>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                           <a href="~/Login" style="color: #393f81;">Quay lại đăng nhập</a>
                                        </p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
