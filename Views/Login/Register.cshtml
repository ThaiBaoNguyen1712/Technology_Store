@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    
    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" crossorigin="anonymous">

    <style>

        /* Custom styles */

        html, body {
            height: 100%;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .container-fluid {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .divider:before,
        .divider:after {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        /* Height customization */
        .h-custom {
            height: calc(100vh - 70px);
        }

        /* Media query for smaller screens */
        media (max-width: 450px) {
            .h-custom {
                height: 100%;
            }
        }

        /* Adjusting card content */
        .card {
            border-radius: 1rem;
            overflow: hidden;
        }

        /* Custom buttons */
        .btn-custom {
            background-color: #ff6219;
            color: white;
        }

        .btn-custom:hover {
            background-color: #ff8c4f;
            color: white;
        }

        .btn-social {
            color: #393f81;
            border: none;
        }

        .btn-social i {
            font-size: 1.5rem;
        }

        .btn-social:hover {
            color: #ff6219;
        }
    </style>
</head>
<body>
    <section class="container-fluid" style="background-color: #f8f9fa; padding-top:10vh">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card">
                        <div class="row g-0">
                            <!-- Image Section -->
                            <div class="col-md-6 col-lg-5 d-none my-auto d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>

                            <!-- Form Section -->
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form>
                                        <!-- Logo -->
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="bi bi-cup-straw me-3" style="font-size: 2rem; color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Website E-Commerce</span>
                                        </div>

                                        <!-- Sign-in Heading -->
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng Ký Tài Khoản</h5>

                                        <!-- Email Input -->
                                        <div class="form-outline mb-4">
                                            <input type="email" id="form2Example17" class="form-control form-control" autofocus/>
                                            <label class="form-label" for="form2Example17">Email</label>
                                        </div>

                                        <!-- Password Input -->
                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example27" class="form-control form-control" />
                                            <label class="form-label" for="form2Example27">Password</label>
                                        </div>

                                        <!-- Confirm Password Input -->
                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example27" class="form-control form-control" />
                                            <label class="form-label" for="form2Example27">Password</label>
                                        </div>

                                        <!-- Register Button -->
                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-custom btn btn-block" data-bs-toggle="modal" href="#exampleModalToggle" role="button" type="button">Đăng ký</button>
                                        </div>
                                        <a class="btn btn-primary" data-bs-toggle="modal" href="#exampleModalToggle" role="button">Open first modal</a>
                                        @Html.Partial("VerifyOTP")

                                        <!-- Divider -->
                                        <div class="divider d-flex align-items-center my-4">
                                            <p class="text-center fw-bold mx-3 mb-0">Or</p>
                                        </div>

                                        <!-- Social Media Buttons -->
                                        <div class="justify-content-center d-flex mb-4">
                                            <button type="button" class="btn btn-social btn-lg mx-1">
                                                <i class="bi bi-facebook"></i>
                                            </button>

                                            <button type="button" class="btn btn-social btn-lg mx-1">
                                                <i class="bi bi-twitter"></i>
                                            </button>

                                            <button type="button" class="btn btn-social btn-lg mx-1">
                                                <i class="bi bi-linkedin"></i>
                                            </button>
                                        </div>

                                        <!-- Footer Links -->
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Đã có tài khoản? <a href="~/Login" style="color: #ff6219;">Đăng nhập</a>
                                        </p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>
                                    </form>

                                </div>
                            </div> <!-- End of Form Section -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
