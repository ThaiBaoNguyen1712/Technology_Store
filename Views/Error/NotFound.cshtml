@{
    ViewData["Title"] = "Không tìm thấy trang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="error-container text-center">
                <!-- Animated 404 Illustration -->
                <div class="error-animation mb-4">
                    <svg width="300" height="200" viewBox="0 0 300 200" class="error-svg">

                        <!-- Number 4 -->
                        <text x="20" y="120"
                              style="font-size:120px;font-weight:bold;fill:#ff0000;">
                            4
                        </text>

                        <!-- 0 (search icon style) -->
                        <circle cx="150" cy="80" r="45"
                                style="fill:none;stroke:#ff0000;stroke-width:8;" />
                        <circle cx="150" cy="80" r="30"
                                style="fill:#ffffff;" />
                        <line x1="182" y1="112" x2="205" y2="135"
                              style="stroke:#ff0000;stroke-width:8;stroke-linecap:round;" />

                        <!-- Number 4 -->
                        <text x="210" y="120"
                              style="font-size:120px;font-weight:bold;fill:#ff0000;">
                            4
                        </text>

                    </svg>
                </div>


                <!-- Error Message -->
                <div class="error-content">
                    <h1 class="fw-bold mb-3" style="color: red;">
                        Oops! Trang không tồn tại
                    </h1>
                    <p class="text-muted mb-4">
                        Có vẻ như trang bạn đang tìm kiếm đã bị di chuyển hoặc không còn tồn tại nữa.
                    </p>

                  
                    <!-- Help Text -->
                    <div class="mt-5 pt-4" style="border-top: 1px solid #e9ecef;">
                        <p class="text-muted small mb-2">
                            <i class="fas fa-question-circle me-2"></i>
                            Cần hỗ trợ?
                            <a href="/contact" class="text-decoration-none" style="color: #ff0000; font-weight: 500;">Liên hệ với chúng tôi</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

